<p style="color: green"><%= notice %></p>

<h1>Customer List</h1>

<table border="1">
  <thead>
    <tr>
      <th>Email</th>
      <th>Customer ID</th>
      <th>Customer Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.email, customer %></td>
        <td><%= customer.customer_id %></td>
        <td><%= customer.customer_name %></td>
        <td>
          <% if customer.access_token.present? %>
            <%= "✔️ Token Saved" %>
          <% else %>
            <%= link_to "Connect to Finch", connect_customer_path(customer.id), class: "btn btn-primary" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "New customer", new_customer_path %>
